{
  "name": "lamlam-dev",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "watch": "tailwindcss -i ./tailwind.css -o ./public/tailwind.css --watch",
    "build": "tailwindcss -i ./tailwind.css -o ./public/tailwind.css --minify",
    "start": "serve public"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "serve": "^13.0.2",
    "tailwindcss": "^3.0.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
